<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_bookmark_list_item"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:clickable="true"
    android:focusable="true"
    xmlns:tools="http://schemas.android.com/tools"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/settings_card_view_light_mode_state">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_bookmark_list_item"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/sample_logo_1"
            android:contentDescription="@string/item_type_icon"/>

        <TextView
            android:id="@+id/tv_title_bookmark_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/tv_price_bookmark_list_item"
            android:layout_toEndOf="@+id/img_bookmark_list_item"
            tools:text="Item"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@drawable/list_text_state"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_price_bookmark_list_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            tools:text="100.7K"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@drawable/list_text_state"
            android:textSize="18sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>