<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bookmark_item_view_dialog_scroll_view"
    android:layout_width="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/bookmark_item_view_dialog_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/bookmark_iv_item_view_dialog_type_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/sample_logo_1"
            android:contentDescription="@string/item_type_icon"/>


        <TextView
            android:id="@+id/bookmark_tv_item_view_dialog_fill_up_type_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/bookmark_iv_item_view_dialog_type_icon"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/bookmark_iv_item_view_dialog_type_icon"
            tools:text="Text View"
            android:textSize="24sp"
            android:textColor="@color/dark_grey"
            android:textStyle="bold"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/bookmark_tv_view_title_item_view_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bookmark_iv_item_view_dialog_type_icon"
            android:layout_marginTop="5dp"
            android:text="@string/item_name"
            android:textColor="@color/dark_grey"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/bookmark_tv_title_item_view_dialog"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/bookmark_tv_view_title_item_view_dialog"
            android:layout_marginTop="5dp"
            android:background="@drawable/fill_up_border"
            android:padding="10dp"
            tools:text="Chicken"
            android:textColor="@color/dark_grey"
            android:textSize="18sp"
            android:maxLines="1"
            android:ellipsize="end"
            />


        <TextView
            android:id="@+id/bookmark_tv_value_value_item_view_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bookmark_tv_title_item_view_dialog"
            android:layout_marginTop="5dp"
            android:text="@string/item_value"
            android:textColor="@color/dark_grey"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/bookmark_tv_monetary_value_item_view_dialog"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/bookmark_tv_value_value_item_view_dialog"
            android:layout_marginTop="5dp"
            android:background="@drawable/fill_up_border"
            android:padding="10dp"
            tools:text="200"
            android:textColor="@color/dark_grey"
            android:textSize="18sp"
            android:maxLines="1"/>

        <Button
            android:id="@+id/bookmark_btn_done_item_view_dialog"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/bookmark_tv_monetary_value_item_view_dialog"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:background="@mipmap/ic_done" />


    </RelativeLayout>

</ScrollView>