<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fill_up_dialog_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/fill_up_dialog_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white">


        <ImageView
            android:id="@+id/iv_fill_up_type_icon"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginTop="10dp" />


        <TextView
            android:id="@+id/tv_fill_up_type_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="11dp"
            android:layout_toEndOf="@+id/iv_fill_up_type_icon"
            android:text="Text View"
            android:textColor="@color/dark_grey"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_fill_up_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_fill_up_type_icon"
            android:layout_marginBottom="-30dp"
            android:text="Title"
            android:textColor="@color/dark_grey"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_title"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_alignTop="@id/tv_fill_up_title"
            android:layout_marginTop="30dp"
            android:background="@drawable/fill_up_border"
            android:ems="10"
            android:textColor="@color/dark_grey"
            android:hint="Enter Title.."
            android:textColorHint="@color/grey"
            android:inputType="text"
            android:padding="10dp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/et_title"
            android:layout_marginTop="50dp"
            android:text="Date"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_set_date"
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:layout_alignTop="@id/tv_date"
            android:layout_marginTop="30dp"
            android:background="@drawable/custom_green_button_state"
            android:text="Set Date"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_date_value"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/btn_set_date"
            android:layout_alignTop="@id/tv_date"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="27dp"
            android:background="@drawable/fill_up_border"
            android:gravity="center"
            android:padding="8dp"
            android:text="Jan 20, 2015"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/btn_set_date"
            android:layout_marginTop="44dp"
            android:text="Time"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_set_time"
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:layout_alignTop="@id/tv_time"
            android:layout_marginTop="30dp"
            android:background="@drawable/custom_green_button_state"
            android:text="Set Time"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_time_value"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/btn_set_time"
            android:layout_alignTop="@id/tv_time"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="27dp"
            android:background="@drawable/fill_up_border"
            android:gravity="center"
            android:padding="8dp"
            android:text="12:10 AM"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/btn_set_time"
            android:layout_marginTop="44dp"
            android:text="Monetary Value"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_monetary_value"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_alignTop="@id/tv_value"
            android:layout_marginTop="30dp"
            android:background="@drawable/fill_up_border"
            android:ems="10"
            android:hint="Enter Amount..."
            android:inputType="numberDecimal"
            android:textColor="@color/dark_grey"
            android:padding="10dp" />

        <Button
            android:id="@+id/btn_close"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignTop="@id/et_monetary_value"
            android:layout_alignRight="@id/btn_done"
            android:layout_marginTop="50dp"
            android:layout_marginRight="50dp"
            android:background="@mipmap/ic_close" />

        <Button
            android:id="@+id/btn_done"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignTop="@id/et_monetary_value"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="50dp"
            android:background="@mipmap/ic_done" />


    </RelativeLayout>


</ScrollView>