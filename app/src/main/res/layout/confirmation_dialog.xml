<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout_confirmation_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:id="@+id/tv_confirmation_confirmation_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="6dp"
        android:text="Confirmation"
        android:textColor="@color/dark_grey"
        android:textSize="20sp"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/tv_confirmation_text_confirmation_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_confirmation_confirmation_dialog"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:text="Are you sure you want to delete all the items in trash permanently?"
        android:textColor="@color/dark_grey"
        android:textSize="16sp"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/tv_confirmation_no_confirmation_dialog"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_below="@id/tv_confirmation_text_confirmation_dialog"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        android:layout_toStartOf="@+id/tv_confirmation_yes_confirmation_dialog"
        android:background="@color/white"
        android:gravity="center"
        android:text="No"
        android:padding="4dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/green"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_confirmation_yes_confirmation_dialog"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/tv_confirmation_text_confirmation_dialog"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="18dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="Yes"
        android:padding="4dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/green"
        android:textSize="16sp" />

</RelativeLayout>