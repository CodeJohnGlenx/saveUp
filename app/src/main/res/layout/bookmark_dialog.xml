<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bookmark_dialog_bookmark_dialog"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:gravity="center"
    android:layout_height="match_parent">

    <TextView android:id="@+id/bookmark_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Bookmark"
        android:background="@color/colorPrimary"
        android:textColor="#fff"
        android:textSize="30sp"
        android:gravity="center"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bookmark_dialog_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/bookmark_dialog_title"
        android:layout_gravity="center_horizontal"
        />


</RelativeLayout>