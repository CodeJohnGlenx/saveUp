<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="5dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/progressCardView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/light_white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ProgressBar
                android:id="@+id/progressBar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                android:padding="2dp"
                android:progressDrawable="@drawable/custom_progress_bar_green" />

            <TextView
                android:id="@+id/tv_fund"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/progressBar"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="-30dp"
                android:text="Asset"
                android:textSize="18sp" />


            <View
                android:id="@+id/divider"
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_alignTop="@id/progressBar"
                android:layout_alignRight="@id/tv_fund"
                android:layout_marginTop="30dp"
                android:layout_marginRight="-55dp"
                android:background="@color/light_grey" />

            <TextView
                android:id="@+id/tv_fund_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_fund"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="-25dp"
                android:text="1000.00"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_expenses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/progressBar"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="-30dp"
                android:text="Expenses"
                android:layout_centerInParent="true"
                android:textSize="18sp" />

            <View
                android:id="@+id/dividerTwo"
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_alignTop="@id/progressBar"
                android:layout_alignRight="@id/tv_expenses"
                android:layout_marginTop="30dp"
                android:layout_marginRight="-30dp"
                android:background="@color/light_grey" />

            <TextView
                android:id="@+id/tv_expenses_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_fund"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="-25dp"
                android:text="1000.00"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/progressBar"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="-30dp"
                android:text="Balance"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_balance_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_balance"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="-25dp"
                android:text="1000.00"
                android:textSize="18sp" />


        </RelativeLayout>


        <!-- android:progressDrawable="@drawable/custom_progress_bar_green" -->


    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_alignTop="@+id/progressCardView"
        android:layout_marginTop="105dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/recyclerView"
        android:layout_alignBottom="@+id/recyclerView"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_add_info"
        app:borderWidth="0dp"
        app:useCompatPadding="true" />


</RelativeLayout>