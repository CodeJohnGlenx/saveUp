<?xml version="1.0" encoding="utf-8"?><!-- alt + ctrl + L to organize xml code -->

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_card"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:clickable="true"
    android:elevation="8dp"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/list_card_state_light_theme"
    card_view:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal">


        <ImageView
            android:src="@drawable/sample_logo_1"
            android:id="@+id/item_list_type_icon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:contentDescription="@string/item_type_icon"/>

        <TextView
            android:id="@+id/txvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/txvPrice"
            android:layout_toEndOf="@id/item_list_type_icon"
            tools:text="Item"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@drawable/list_text_state"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            tools:text="705.5K"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAlignment="textEnd"
            android:textColor="@drawable/list_text_state"
            android:textSize="28sp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>