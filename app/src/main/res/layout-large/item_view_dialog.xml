<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_view_dialog_scroll_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/item_view_dialog_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/iv_item_view_type_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/sample_logo_1"
            android:contentDescription="@string/item_type_icon"
            />


        <TextView
            android:id="@+id/tv_fill_up_type_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_alignTop="@id/iv_item_view_type_icon"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/iv_item_view_type_icon"
            tools:text="Text View"
            android:textSize="32sp"
            android:textColor="@color/dark_grey"
            android:textStyle="bold"
            android:maxLines="1"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/tv_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_item_view_type_icon"
            android:layout_marginTop="10dp"
            android:text="@string/item_name"
            android:textColor="@color/dark_grey"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_view_title"
            android:layout_marginTop="5dp"
            android:background="@drawable/fill_up_border"
            android:textSize="22sp"
            tools:text="Hello World"
            android:textColor="@color/dark_grey"
            android:padding="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/tv_view_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="10dp"
            android:text="@string/date"
            android:textColor="@color/dark_grey"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_date_value"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_view_date"
            android:layout_marginTop="4dp"
            android:background="@drawable/fill_up_border"
            android:gravity="center"
            android:maxLines="1"
            android:padding="8dp"
            android:textColor="@color/dark_grey"
            android:textSize="22sp"
            tools:text="Jan 20, 2015" />

        <TextView
            android:id="@+id/tv_view_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_date_value"
            android:layout_marginTop="10dp"
            android:text="@string/time"
            android:textColor="@color/dark_grey"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_time_value"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_view_time"
            android:layout_marginTop="5dp"
            android:background="@drawable/fill_up_border"
            android:gravity="center"
            android:maxLines="1"
            android:padding="8dp"
            android:textColor="@color/dark_grey"
            android:textSize="22sp"
            tools:text="12:10 AM" />

        <TextView
            android:id="@+id/tv_value_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_time_value"
            android:layout_marginTop="10dp"
            android:text="@string/item_value"
            android:textColor="@color/dark_grey"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_monetary_value"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_value_value"
            android:layout_marginTop="4dp"
            android:background="@drawable/fill_up_border"
            android:maxLines="1"
            android:padding="10dp"
            android:textColor="@color/dark_grey"
            android:textSize="22sp"
            tools:text="100" />

        <Button
            android:id="@+id/btn_done"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/tv_monetary_value"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/tv_monetary_value"
            android:background="@mipmap/ic_done" />


    </RelativeLayout>


</ScrollView>