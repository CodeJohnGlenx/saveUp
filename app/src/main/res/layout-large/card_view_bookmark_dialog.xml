<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_bookmark_dialog_card_view"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:clickable="true"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    card_view:cardBackgroundColor="@color/list_card_state_light_theme"
    android:layout_marginTop="1dp">

    <RelativeLayout
        android:id="@+id/card_view_bookmark_dialog_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/card_view_bookmark_dialog_image_view"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/sample_logo_1"
            android:contentDescription="@string/item_type_icon"/>

        <TextView
            android:id="@+id/card_view_bookmark_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@+id/card_view_bookmark_dialog_image_view"
            tools:text="Bookmark Item"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/card_view_bookmark_text_light_state"
            android:textSize="32sp"
            android:textStyle="bold" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>